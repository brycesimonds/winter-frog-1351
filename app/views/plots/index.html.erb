<h1>Plots Index Page</h1>

<ul>
    <% @plots.each do |plot| %>
        <div id="plot-<%= plot.id %>">
            <li>Plot number: <%= plot.number %></li>
            <ul>
                <% plot.plants.each do |plant| %>
                    <li><%= plant.name %> - <%= button_to "Remove from Plot", "/plant_plots/#{plant.id}/#{plot.id}", method: :delete, local: true %></li>
                <% end %>
            </ul>
        </div>
        <br>
    <% end %>
</ul>